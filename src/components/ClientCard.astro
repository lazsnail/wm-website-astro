---
interface Props {
	logo: ImageMetadata;
    description: string;
    url: string;
}

const { logo, description, url } = Astro.props;
---


<div 
    class="w-5/6 max-w-[500px] flex flex-col gap-10 justify-between items-center bg-white text-black text-center p-6 rounded-lg"
>
    <img
        width={200}
        src={logo.src}
        alt="Bong's Donburi logo"
    />
    <i 
        class="text-lg tracking-wide leading-8"
    >
        { description }
    </i>
    <a
        class="w-fit flex gap-2 py-2 px-3 tracking-wide rounded-lg text-black bg-white font-bold border-2 border-black hover:-translate-y-1 hover:-translate-x-1 hover:shadow-button hover:shadow-black transition focus:translate-x-0 focus:translate-y-0 focus:shadow-none"
        href={url}
        target="blank"
    >
        VISIT SITE
    </a>
</div>
